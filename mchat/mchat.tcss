Screen {
    # This makes sure dialogs are centered on the screen
    align: center middle;
    layers: below above;
}

Header {
    dock: top;
}

/* Chat Area */

ChatTurn {
    # border: solid yellow; 
    height: auto;
    padding: 1 2;
}

#chat-container {
    # border: green;

}

#chatturn-container {
    height: auto;
    # border: red;
}

#chatturn-markdown {
    # border: green;
    height: auto;
    margin: 0 0 0 0;
}

#right-pane {
    height: auto;
    # border: white;
}

MarkdownParagraph {
    # border: orange;
    # padding: 0 0 0 0;
    margin: 0 0 0 0;
}

ChatTurn .user {
    align-horizontal: right;
}

ChatTurn .assistant {
    align-horizontal: left;
}

.user #chatturn-markdown {
    /* border: $primary; */
    /* color: $primary; */
    /* background: $boost; */
    color: $text;
    padding: 0 0 0 0;

    background: $primary-background;
    border: $primary-background;
    width: 70%;
}

.assistant #chatturn-markdown {
    border: $secondary-background-darken-1;
    # padding: 1 1 0 1;
    color: $text;
    background: $secondary-background-darken-1;
    width: 70%;
}

