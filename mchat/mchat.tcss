/* Input Area */
/* Prompt Input is the full input area for the user including the label and input area
and its surrounding Scrollbar */
PromptInput {
    height: auto;
    margin-bottom: 1;
    margin-left: 1;
    margin-right: 1;
    padding-right: 1;
    /* border: round green; */
    # dock: bottom;
}

/* MultiLineInput is the inputarea inside the scrollbar */
TextArea2 {
    border: red;
    border-title-color: $secondary;
    border-title-background: $primary;
    border-title-align: right;
    border-title-style: bold;
}

MultiLineInput {
    border: $primary-background;
    background: $primary-background;
    overflow-x: auto
}

#instructions {
    color: $text;
}

/* Debug Pane */

DebugPane {
    # border: solid green; 
    width: 20%;
    height: 100%;
    display: none;
    background: $panel;
    /* overflow-x: scroll; */
}

DebugPane Collapsible {
    color: $secondary;
}

DebugPane Collapsible Contents {
    color: $text;
    # background: $panel;
    # border: $panel;
    # border: red;
    padding: 0;
    margin: 0;
    # height: 1;
    # width: 100%;
    # box-sizing: content-box;
    /* border: solid red; */
}

.-show-debug DebugPane {
    display: block;
}

/* History Pane */
HistoryContainer {
    border: $primary-background;
    width: 15%
}

HistorySessionBox {
